  "imageSizes": {
    "small": 40,
    "medium": 80,
    "large": 160
  },
  "imageSet": {
    "imageSize": "medium",
    "maxImageHeight": 100
  },
  "spacing": {
    "small": 4,
    "default": 8,
    "medium": 16,
    "large": 24,
    "extraLarge": 32,
    "padding": 16
  },
  "separator": {
    "lineThickness": 1,
    "lineColor": "#4A1812"
  },
  "actions": {
    "maxActions": 5,
    "spacing": "default",
    "buttonSpacing": 8,
    "showCard": {
      "actionMode": "inline",
      "inlineTopMargin": 16,
      "style": "emphasis"
    },
    "actionsOrientation": "horizontal",
    "actionAlignment": "stretch",
    "iconPlacement": "leftOfTitle",
    "iconSize": 20
  },
  "adaptiveCard": {
    "allowCustomStyle": true
  },
  "textBlock": {
    "headingLevel": 2
  },
  "factSet": {
    "title": {
      "color": "accent",
      "size": "default",
      "isSubtle": false,
      "weight": "bolder",
      "wrap": true
    },
    "value": {
      "color": "default",
      "size": "default",
      "isSubtle": false,
      "weight": "default",
      "wrap": true
    },
    "spacing": 8
  },
  "inputs": {
    "label": {
      "inputSpacing": "small",
      "requiredInputs": {
        "weight": "bolder",
        "color": "attention",
        "size": "default",
        "isSubtle": false,
        "suffix": " *"
      },
      "optionalInputs": {
        "weight": "default",
        "color": "default",
        "size": "default",
        "isSubtle": true
      }
    },
    "errorMessage": {
      "weight": "default",
      "color": "attention",
      "size": "small",
      "isSubtle": false
    }
  }
}
