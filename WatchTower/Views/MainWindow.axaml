<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ac="using:AdaptiveCards.Rendering.Avalonia"
        xmlns:vm="using:WatchTower.ViewModels"
        xmlns:converters="using:WatchTower.Converters"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="WatchTower.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="WatchTower"
        WindowState="FullScreen"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True">
    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial BackgroundSource="Digger"
                                            TintColor="Black"
                                            TintOpacity="1"
                                            MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        
        <!-- Main Content -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                       Text="Game Controller Support &amp; Adaptive Cards"
                       FontSize="32"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />

            <!-- Left Panel: Game Controller -->
            <StackPanel Grid.Row="2" Grid.Column="0" Spacing="10">
                <TextBlock Text="{Binding StatusText}"
                           FontSize="18"
                           HorizontalAlignment="Center" />
                
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="20">
                    <TextBlock Text="Last Button Pressed:" FontSize="14" />
                    <TextBlock Text="{Binding LastButtonPressed}" 
                               FontSize="14" 
                               FontWeight="Bold" />
                </StackPanel>
                
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="20">
                    <TextBlock Text="Total Button Presses:" FontSize="14" />
                    <TextBlock Text="{Binding ButtonPressCount}" 
                               FontSize="14" 
                               FontWeight="Bold" />
                </StackPanel>
                
                <!-- Test buttons to invoke input mechanisms -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,10,20,0" Spacing="10">
                    <Button Content="Rich Text Input" 
                            Command="{Binding ShowRichTextInputCommand}"
                            Padding="15,8"/>
                    <Button Content="Voice Input" 
                            Command="{Binding ShowVoiceInputCommand}"
                            Padding="15,8"/>
                </StackPanel>
            </StackPanel>

            <!-- Right Panel: Adaptive Card -->
            <Border Grid.Row="2" Grid.Column="2"
                    Background="#20FFFFFF"
                    CornerRadius="8"
                    Padding="10">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                             VerticalScrollBarVisibility="Auto">
                    <ac:AdaptiveCardView Card="{Binding CurrentCard}" 
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top" />
                </ScrollViewer>
            </Border>

            <!-- Event Log -->
            <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                    Background="#20FFFFFF"
                    CornerRadius="8"
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0"
                               Text="Event Log"
                               FontSize="16"
                               FontWeight="Bold" />
                    
                    <ScrollViewer Grid.Row="2">
                        <ItemsControl ItemsSource="{Binding ControllerEvents}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                               FontFamily="Consolas,Courier New"
                                               FontSize="12"
                                               Margin="0,2" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Input Overlay -->
        <Grid IsVisible="{Binding IsOverlayVisible}">
            <!-- Semi-transparent backdrop -->
            <Border Background="#CC000000" 
                    Tapped="OnBackdropTapped"/>
            
            <!-- Input Panel Container -->
            <Border Background="#EE1A1A1A"
                    CornerRadius="12"
                    BorderBrush="#4AFFFFFF"
                    BorderThickness="1"
                    MaxWidth="600"
                    MaxHeight="400"
                    Padding="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 4 #80000000">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock FontSize="20" 
                                   FontWeight="SemiBold"
                                   Foreground="White">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} Input">
                                    <Binding Path="IsRichTextMode">
                                        <Binding.Converter>
                                            <converters:BoolToTextConverter TrueValue="Rich Text" FalseValue="Voice"/>
                                        </Binding.Converter>
                                    </Binding>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <Button Content="âœ•" 
                                Command="{Binding CloseOverlayCommand}"
                                HorizontalAlignment="Right"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#CCFFFFFF"
                                FontSize="20"
                                Padding="8,0"/>
                    </Grid>
                    
                    <!-- Rich Text Input Panel -->
                    <Border Grid.Row="1" 
                            IsVisible="{Binding IsRichTextMode}"
                            Background="#1AFFFFFF"
                            CornerRadius="6"
                            Padding="12">
                        <TextBox Text="{Binding InputText}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Watermark="Enter your text here..."
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"
                                 MinHeight="200"/>
                    </Border>
                    
                    <!-- Voice Input Panel -->
                    <Border Grid.Row="1" 
                            IsVisible="{Binding IsVoiceMode}"
                            Background="#1AFFFFFF"
                            CornerRadius="6"
                            Padding="12">
                        <StackPanel VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Spacing="16">
                            <Ellipse Width="80" 
                                     Height="80" 
                                     Fill="#FF4444"
                                     HorizontalAlignment="Center">
                                <Ellipse.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:1"/>
                                    </Transitions>
                                </Ellipse.Transitions>
                            </Ellipse>
                            <TextBlock Text="Voice recording ready..."
                                       FontSize="16"
                                       HorizontalAlignment="Center"
                                       Foreground="#CCFFFFFF"/>
                            <TextBlock Text="(Voice recording functionality to be implemented)"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Foreground="#88FFFFFF"
                                       FontStyle="Italic"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                Spacing="8"
                                Margin="0,16,0,0">
                        <Button Content="Cancel" 
                                Command="{Binding CloseOverlayCommand}"
                                Padding="16,8"
                                MinWidth="100"/>
                        <Button Content="Submit" 
                                Command="{Binding SubmitInputCommand}"
                                Padding="16,8"
                                MinWidth="100"
                                Classes="accent"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Panel>
</Window>
