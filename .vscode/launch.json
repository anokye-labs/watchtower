{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/WatchTower/bin/Debug/net10.0/win-x64/WatchTower.dll",
      "args": [],
      "cwd": "${workspaceFolder}/WatchTower",
      "stopAtEntry": false,
      "console": "internalConsole",
      "env": {
        "DOTNET_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Run (without debugging)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/WatchTower/bin/Debug/net10.0/win-x64/WatchTower.dll",
      "args": [],
      "cwd": "${workspaceFolder}/WatchTower",
      "stopAtEntry": false,
      "console": "internalConsole",
      "enableStepFiltering": false,
      "justMyCode": false
    },
    {
      "name": "Watch (Hot Reload)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "watch",
      "program": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/WatchTower/WatchTower.csproj",
        "--non-interactive"
      ],
      "cwd": "${workspaceFolder}/WatchTower",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "DOTNET_ENVIRONMENT": "Development",
        "DOTNET_WATCH_RESTART_ON_RUDE_EDIT": "true"
      }
    },
    {
      "name": "Attach to Running App",
      "type": "coreclr",
      "request": "attach",
      "processName": "WatchTower"
    }
  ]
}
